@inherits QuestionAnswerListComponentBase

@if (Questions == null)
{
    <div>Loading</div>
}
else
{
    <div class="container">

        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-end mb-4">
                    <button class="btn btn-outline-primary align-self-end" @onclick="CollapseAllCards">X</button>
                </div>
                <div id="accordion">

                    @foreach (var question in Questions)
                    {
                        <AcordionComponent Question="question" Collapse="@Collapse"/>
                    }
                </div>

            </div>
        </div>

    </div>
}