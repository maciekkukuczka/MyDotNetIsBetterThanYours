@inherits FrontQuestionAnswerListComponentBase

@if (Questions == null)
{
    <div>Loading</div>
}
else
{
    <div class="container">

        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-end mb-4">
                    <button class="btn btn-outline-secondary mr-4 " data-toggle="modal" data-target="#exampleModalCenter" @onclick="Add">Dodaj pytanie</button>

                    <button class="btn btn-outline-primary " @onclick="CollapseAllCards">X</button>
                </div>
                <div id="accordion">

                    @foreach (var question in Questions)
                    {
                        <FrontAcordionComponent Item="question" Collapse="@Collapse"/>
                    }
                </div>

            </div>
        </div>

    </div>
}

@* @if (Question != null) *@
