@*     @Question.Content *@
@* } *@


<!-- Modal -->

@if (ModalIsOpen)
{
    <ModalAddQuestionComponent IsOpen="@ModalIsOpen" Model="@Question" ModelChanged="@SaveAsync"></ModalAddQuestionComponent>
}
